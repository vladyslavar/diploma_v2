<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EHApp Home</title>
</head>
<body>
    <div class="container">
        <div class="header">
            <a href="/home">EHApp</a>
            <ul>
                <li><a href="">Discover</a></li> <!-- Discover organizations and apps, statistic for each by some parameters entered-->
                <li><a href="/all_organizations">Configure</a></li> <!-- Configure organizations and apps, possibilities to collect stats, manage given keys -->
                <li><a href="">Monitor</a></li> <!-- Monitor organizations and apps, statistic for each (just choose and see common data)-->
                <li><a href="user_profile">Profile</a></li> <!--  -->
            </ul>
        </div>
        <div class="main_content">
            <% if (available_organizations.length > 0) { %>
                <h2>Available organizations</h2>
                <ul>
                    <% available_organizations.forEach((org, index) => { %>
                        <li>
                            <a href="/organization/<%= org.id %>"><%= org.name.name %></a>
                            <ul>
                                <% available_apps[index].forEach(app => { %>
                                    <li><%= app.name %></li>
                                <% }) %>
                            </ul>
                        </li>
                    <% }) %>
                </ul>
            <% } %>
            
            
        </div>
    </div>
    
</body>
</html>